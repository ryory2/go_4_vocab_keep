{
    "family": "my-task-family",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::990606419933:role/ecs-task-execution-role", // Terraformで作成した実行ロールのARN
    "taskRoleArn": "arn:aws:iam::990606419933:role/ecs-task-role", // Terraformで作成したタスクロールのARN
    "containerDefinitions": [
        {
            "name": "backend", // ここが container-name で指定する名前
            "image": "IMAGE_PLACEHOLDER", // ここが置き換えられる
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8080/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            },
            "environment": [], // 環境変数は `environment-variables` で上書きされる
            "logConfiguration": { // 必要に応じてログ設定を追加
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/my-task-family", // CloudWatch Logs グループ名
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}